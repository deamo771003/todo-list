<form action="/todos/{{ todo._id }}?_method=DELETE" method="POST" style="display: inline;">
  <div class="input-group">
    <div class="input-group-text">
      <input type="checkbox" class="from-check-input mt-0" name="isDone" {{#if todo.isDone}} checked {{/if}} disabled>
    </div>
    <input class="form-control" type="name" placeholder="name" name="name" value="{{ todo.name }}">
    <a class="btn btn-success" href="/todos/{{ todo._id }}/edit">edit</a>
    <a class="btn btn-secondary" href="/">Back</a>
    <button class="btn btn-danger" type="submit">delete</button>
  </div>
</form>